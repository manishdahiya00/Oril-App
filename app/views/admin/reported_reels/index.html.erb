<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h2 class="page-header">Reported Reels</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <% if @reported_reels.present? %>
          <table class="table table-responsive table-bordered">
            <thead>
              <tr>
                <th>ID</th>
                <th>Reporting Reason</th>
                <th>Description</th>
                <th>User</th>
                <th>Reel</th>
                <th>Created At</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% @reported_reels.each do |reported_reel| %>
                <tr>
                  <td><%= reported_reel.id %></td>
                  <td><%= reported_reel.reporting_reason %></td>
                  <td><%= reported_reel.description %></td>
                  <td><a href="/admin/users/<%= reported_reel.user_id %>"><%= reported_reel.user_id %></a></td>
                  <td><a href="/admin/reels/<%= reported_reel.reel_id %>"><%= reported_reel.reel_id %></a></td>
                  <td><%= reported_reel.created_at.strftime("%Y-%m-%d %I:%M:%p") %></td>
                  <td>
                    <div style="display: flex;gap:5px;"> 
                        <%= link_to 'Show Reel', admin_reported_reel_path(reported_reel.reel_id),class: 'btn btn-default btn-sm' %>
                        <%= button_to 'Approve', admin_approve_reported_reel_path(reported_reel), method: :put, class: 'btn btn-primary btn-sm' %>
                        <%= button_to 'Delete Reel', admin_reported_reel_path(reported_reel), method: :delete,class: 'btn btn-danger btn-sm' %>
                    </div>
                    </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <p>No reported reels found.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
