<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <p id="notice" style="color: orange;"><%= notice %></p>
      <div class="col-lg-12">
        <h2 class="page-header" style="margin: 10px 0 15px !important;">Listing Musics</h2>
      </div>
      <div class="col-lg-12 text-right">
        <%= link_to 'New Music', new_admin_music_path, class: 'btn btn-primary', style: 'margin-bottom: 10px;' %>
      </div>
      <!-- Music Details Table -->
      <% if @musics.present? %>
        <table class="table table-responsive table-bordered">
          <thead>
            <tr>
              <th>Id</th>
              <th>Music Title</th>
              <th>Music Image</th>
              <th>Singer</th>
              <th>Created At</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @musics.each do |music| %>
              <tr>
                <td><%= music.id %></td>
                <td><%= music.title %></td>
                <td><img style="width: 20px;" src="<%= music.image_url %>" onerror="this.onerror=null;this.src='https://cdn.pixabay.com/photo/2014/03/24/17/21/wrong-295503_640.png';" /></td>
                <td><%= music.singer %></td>
                <td><%= music.created_at.strftime("%d/%m/%y %I:%M %p") %></td>
                <td>
                <div style="display: flex;gap:5px;">
                  <%= link_to 'Show', admin_music_path(music), class: 'btn btn-default btn-sm' %>
                  <%= link_to 'Edit', edit_admin_music_path(music), class: 'btn btn-primary btn-sm' %>
                  <%= button_to 'Delete', admin_music_path(music), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
                </td>
                </div>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @musics %>
      <% else %>
        <h3 class="not-found">No Musics Found</h3>
      <% end %>
    </div>
  </div>
</div>
